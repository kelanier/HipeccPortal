<div id="display_request_background">
  <center>
    <div id="content_display_request_card">
      <p><strong>Created By:</strong>
        <%= @article.creator_username %>
      </p>

      <p>
        <strong>Created:</strong>
        <%= @article.created_at.in_time_zone('Central Time (US & Canada)') %>
      </p>

      <p>
        <strong>Subject:</strong>
        <%= @article.title %>
      </p>

      <p>
        <strong>Message:</strong>
        <%= @article.text %>
      </p>

      <p align="center">
         <%= link_to('Home', home_url) %>
         <%= link_to('Profile', profile_url) %>
         <%= link_to('Logout', logout_url) %>
      </p>
    </div>
  </center>
</div>
