<div id="content">

     <% @page_title = "UserAuth | Signup" %>
     <div class="Sign_Form">
       <center><h1>Update Account</h1></center>
       <%= form_for :user, url: user_path(@user), method: :patch do |f| %>
         <center>
           <p><strong>Username:</strong>
              </br> <%= f.text_field :username%>
           </p>
           <p><strong>Email:</strong>
              </br> <%= f.text_field :email%>
           </p>
           <p><strong>Password:</strong>
              </br> <%= f.password_field :password %>
           </p>
           <p><strong>Password Confirmation:</strong>
              </br> <%= f.password_field :password_confirmation %>
           </p>
           <p><strong>Organization:</strong>
              </br> <%= f.text_field :organization %>
           </p>
           <p><strong>Street:</strong>
              </br> <%= f.text_field :address_street %>
           </p>
           <p><strong>City:</strong>
              </br> <%= f.text_field :address_city%>
           </p>
           <p><strong>State:</strong>
              </br> <%= f.text_field :address_state%>
           </p>
           <p><strong>Zip:</strong>
              </br> <%= f.text_field :address_zip%>
           </p>
           <p><strong>Country:</strong>
              </br> <%= f.text_field :address_zip%>
           </p>


         <%= f.submit :'Submit' %>
         <%= link_to('MyProfile', profile_url) %>

       </center>
       <% end %>

       <center><%= flash[:notice]%></center>

       <center>
       <% if @user.errors.any? %>
         <ul class="Signup_Errors">
         <% for message_error in @user.errors.full_messages %>
           <li>* <%= message_error %> </li>
         <% end %>
         </ul>
       <% end %>
       </center>

</div>
